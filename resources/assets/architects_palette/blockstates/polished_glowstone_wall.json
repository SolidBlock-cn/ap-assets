{
  "multipart": [
    {
      "when": {
        "up": "true"
      },
      "apply": {
        "model": "architects_palette:block/fancy_walls/polished_glowstone/post"
      }
    },
    {
      "when": {
        "OR": [
          {"north": "tall"},
          {"south": "tall"},
          {"west": "tall"},
          {"east": "tall"}
        ]
      },
      "apply": {
        "model": "architects_palette:block/fancy_walls/polished_glowstone/center_tall"
      }
    },
    {
      "when": {
        "up": "false",
        "north": "low|none",
        "south": "low|none",
        "west":  "low|none",
        "east":  "low|none"
      },
      "apply": {
        "model": "architects_palette:block/fancy_walls/polished_glowstone/center_short"
      }
    },
    {
      "when": {
        "north": "low"
      },
      "apply": {
        "model": "architects_palette:block/fancy_walls/polished_glowstone/north_short"
      }
    },
    {
      "when": {
        "east": "low"
      },
      "apply": {
        "model": "architects_palette:block/fancy_walls/polished_glowstone/east_short"
      }
    },
    {
      "when": {
        "south": "low"
      },
      "apply": {
        "model": "architects_palette:block/fancy_walls/polished_glowstone/south_short"
      }
    },
    {
      "when": {
        "west": "low"
      },
      "apply": {
        "model": "architects_palette:block/fancy_walls/polished_glowstone/west_short"
      }
    },
    {
      "when": {
        "north": "tall"
      },
      "apply": {
        "model": "architects_palette:block/fancy_walls/polished_glowstone/north_tall"
      }
    },
    {
      "when": {
        "east": "tall"
      },
      "apply": {
        "model": "architects_palette:block/fancy_walls/polished_glowstone/east_tall"
      }
    },
    {
      "when": {
        "south": "tall"
      },
      "apply": {
        "model": "architects_palette:block/fancy_walls/polished_glowstone/south_tall"
      }
    },
    {
      "when": {
        "west": "tall"
      },
      "apply": {
        "model": "architects_palette:block/fancy_walls/polished_glowstone/west_tall"
      }
    }
  ]
}